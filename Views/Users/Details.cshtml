@model LibraryManagementSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4>
                        <i class="fas fa-user"></i> User Details
                    </h4>
                    <div>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <a asp-controller="Transactions" asp-action="Issue" class="btn btn-success btn-sm ms-2"
                           asp-route-userId="@Model.Id">
                            <i class="fas fa-book-medical"></i> Issue Book
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            <div class="bg-primary text-white rounded-circle p-4 d-inline-block mb-3">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h3>@Model.FirstName @Model.LastName</h3>
                            <p class="text-muted mb-2">
                                <i class="fas fa-id-card"></i> <strong>Membership No:</strong> @Model.MembershipNumber
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fas fa-envelope"></i> <strong>Email:</strong> @Model.Email
                            </p>
                            <p class="text-muted">
                                <i class="fas fa-phone"></i> <strong>Phone:</strong> @(Model.Phone ?? "Not provided")
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle"></i> Account Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Membership Since:</dt>
                                        <dd class="col-sm-7">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                                        <dt class="col-sm-5">Account Status:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-success">Active</span>
                                        </dd>

                                        <dt class="col-sm-5">Total Books Issued:</dt>
                                        <dd class="col-sm-7">@Model.Transactions.Count() books</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-book"></i> Quick Actions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Transactions" asp-action="Issue"
                                           class="btn btn-success" asp-route-userId="@Model.Id">
                                            <i class="fas fa-book-medical"></i> Issue New Book
                                        </a>
                                        <a href="mailto:@Model.Email" class="btn btn-primary">
                                            <i class="fas fa-envelope"></i> Send Email
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4">
                        <i class="fas fa-history"></i> Transaction History
                    </h5>

                    @if (Model.Transactions.Any())
                    {
                        <div class="table-responsive mt-3">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Issue Date</th>
                                        <th>Due Date</th>
                                        <th>Return Date</th>
                                        <th>Status</th>
                                        <th>Fine</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.IssueDate))
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Books" asp-action="Details" asp-route-id="@transaction.BookId">
                                                    @transaction.Book?.Title
                                                </a>
                                            </td>
                                            <td>@transaction.IssueDate.ToString("yyyy-MM-dd")</td>
                                            <td>@transaction.DueDate.ToString("yyyy-MM-dd")</td>
                                            <td>@(transaction.ReturnDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(transaction.Status)">
                                                    @transaction.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (transaction.FineAmount > 0)
                                                {
                                                    <span class="text-danger">$@transaction.FineAmount.ToString("0.00")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success">$0.00</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            No transaction history found for this user.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Issued" => "bg-warning",
            "Returned" => "bg-success",
            "Overdue" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}