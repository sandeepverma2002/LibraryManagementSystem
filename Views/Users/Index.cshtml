@model IEnumerable<LibraryManagementSystem.Models.User>

@{
    ViewData["Title"] = "Library Users";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="fas fa-users"></i> Library Users
            </h2>
        </div>
        @* <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Add New User
            </a>
        </div> *@
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Index" method="get" class="d-flex">
                        <input type="text" name="searchString" class="form-control me-2"
                               value="@ViewData["CurrentFilter"]" placeholder="Search users...">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Membership No.</th>
                            <th>Joined Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.FirstName @item.LastName</strong>
                                </td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                    <span class="badge bg-info">@item.MembershipNumber</span>
                                </td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-success btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#issueModal@(item.Id)"
                                                title="Issue Book to User">
                                            <i class="fas fa-book-medical"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h5>No Users Found</h5>
                    <p class="text-muted">Add your first library user to get started.</p>
                    @* <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="fas fa-user-plus"></i> Add First User
                    </a> *@
                </div>
            }
        </div>
    </div>
</div>

<!-- Modals for issuing books -->
@foreach (var item in Model)
{
    <div class="modal fade" id="issueModal@(item.Id)" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-book-medical"></i> Issue Book to @item.FirstName
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Transactions" asp-action="Issue" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="userId" value="@item.Id" />

                        <div class="form-group mb-3">
                            <label for="bookId@(item.Id)" class="form-label">Select Book to Issue</label>
                            <select id="bookId@(item.Id)" name="bookId" class="form-control" required>
                                <option value="">-- Select a Book --</option>
                                <!-- This would be populated via AJAX or ViewBag -->
                                <option value="1">The Great Gatsby (Available: 5)</option>
                                <option value="2">To Kill a Mockingbird (Available: 3)</option>
                                <option value="3">1984 (Available: 4)</option>
                            </select>
                            <small class="text-muted">Books will be issued for 14 days</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            User: @item.FirstName @item.LastName<br>
                            Membership: @item.MembershipNumber
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-book-medical"></i> Issue Book
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
