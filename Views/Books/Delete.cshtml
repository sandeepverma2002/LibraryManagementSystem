@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Book</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this book?</h5>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Author</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-4">ISBN</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>

                        <dt class="col-sm-4">Total Copies</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalCopies)</dd>

                        <dt class="col-sm-4">Available Copies</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailableCopies)</dd>
                    </dl>

                    @if (Model.AvailableCopies != Model.TotalCopies)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            This book has @(Model.TotalCopies - Model.AvailableCopies) copies currently issued to users.
                            You cannot delete it until all copies are returned.
                        </div>
                    }

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mt-4">
                            @if (Model.AvailableCopies == Model.TotalCopies)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            }
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>