@model IEnumerable<LibraryManagementSystem.Models.Transaction>

@{
    ViewData["Title"] = "Overdue Books";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="fas fa-exclamation-triangle text-warning"></i>
                Overdue Books
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Transactions
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            Great! No overdue books at the moment.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0">Overdue Transactions</h5>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Book</th>
                                <th>User</th>
                                <th>Issue Date</th>
                                <th>Due Date</th>
                                <th>Days Overdue</th>
                                <th>Fine Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var daysOverdue = (DateTime.UtcNow - item.DueDate).Days;
                                <tr>
                                    <td>@item.Book?.Title</td>
                                    <td>@item.User?.FirstName @item.User?.LastName</td>
                                    <td>@item.IssueDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge bg-danger">@daysOverdue days</span>
                                    </td>
                                    <td>
                                        <span class="text-danger">$@((daysOverdue * 10).ToString("0.00"))</span>
                                    </td>
                                    <td>
                                        <a asp-action="Return" asp-route-id="@item.Id"
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-undo"></i> Return
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>