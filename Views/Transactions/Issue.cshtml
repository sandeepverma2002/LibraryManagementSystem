@{
    ViewData["Title"] = "Issue Book";
}

@model (List<LibraryManagementSystem.Models.Book> Books, List<LibraryManagementSystem.Models.User> Users)

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Issue Book to User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Issue" method="post">
                        <div class="form-group mb-3">
                            <label for="bookId" class="control-label">Select Book</label>
                            <select id="bookId" name="bookId" class="form-control" required>
                                <option value="">-- Select a Book --</option>
                                @foreach (var book in Model.Books)
                                {
                                    <option value="@book.Id">
                                        @book.Title by @book.Author (Available: @book.AvailableCopies)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="userId" class="control-label">Select User</label>
                            <select id="userId" name="userId" class="form-control" required>
                                <option value="">-- Select a User --</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">
                                        @user.FirstName @user.LastName (@user.MembershipNumber)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Book will be issued for 14 days. Overdue fine is $10 per day.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-book-medical"></i> Issue Book
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Transactions
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>