@model IEnumerable<LibraryManagementSystem.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Book Transactions</h2>
        </div>
        <div class="col-md-6 text-end">
            <div class="btn-group">
                <a asp-action="Issue" class="btn btn-success">
                    <i class="fas fa-book"></i> Issue Book
                </a>
                <a asp-action="Overdue" class="btn btn-warning">
                    <i class="fas fa-exclamation-triangle"></i> Overdue Books
                </a>
                <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-book"></i> Manage Books
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Transactions</h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Book</th>
                            <th>User</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            <th>Fine</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Book?.Title</td>
                                <td>@item.User?.FirstName @item.User?.LastName</td>
                                <td>@item.IssueDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                                <td>@(item.ReturnDate?.ToString("yyyy-MM-dd") ?? "Not Returned")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Status)">
                                        @item.Status
                                    </span>
                                </td>
                                <td>$@item.FineAmount.ToString("0.00")</td>
                                <td>
                                    @if (item.Status == "Issued")
                                    {
                                        <a asp-action="Return" asp-route-id="@item.Id"
                                           class="btn btn-success btn-sm" title="Return Book">
                                            <i class="fas fa-undo"></i> Return
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Completed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Issued" => "bg-info",
            "Returned" => "bg-success",
            "Overdue" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}