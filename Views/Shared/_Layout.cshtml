<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
            .navbar-brand {
                font-weight: bold;
            }

            .sidebar {
                min-height: calc(100vh - 56px);
                background-color: #f8f9fa;
                padding-top: 20px;
            }

                .sidebar .nav-link {
                    color: #333;
                    padding: 10px 15px;
                    margin: 5px 0;
                    border-radius: 5px;
                }

                    .sidebar .nav-link:hover {
                        background-color: #e9ecef;
                    }

                    .sidebar .nav-link.active {
                        background-color: #0d6efd;
                        color: white;
                    }

            .main-content {
                padding: 20px;
            }

            .badge {
                font-size: 0.8em;
            }

            .footer {
                background-color: #f8f9fa;
                padding: 20px 0;
                margin-top: 40px;
                border-top: 1px solid #dee2e6;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-book"></i> Library Management System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Transactions" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Books" asp-action="Index">
                            <i class="fas fa-book"></i> Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Transactions" asp-action="Index">
                            <i class="fas fa-exchange-alt"></i> Transactions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 sidebar d-md-block">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                               asp-controller="Transactions" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Books" && ViewContext.RouteData.Values["Action"]?.ToString() != "Create" ? "active" : "")"
                               asp-controller="Books" asp-action="Index">
                            <i class="fas fa-book"></i> All Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Books" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")"
                               asp-controller="Books" asp-action="Create">
                            <i class="fas fa-plus-circle"></i> Add New Book
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Transactions" asp-action="Index">
                            <i class="fas fa-list"></i> All Transactions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Issue" ? "active" : "")"
                               asp-controller="Transactions" asp-action="Issue">
                            <i class="fas fa-book-medical"></i> Issue Book
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Overdue" ? "active" : "")"
                               asp-controller="Transactions" asp-action="Overdue">
                            <i class="fas fa-exclamation-triangle"></i> Overdue Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
                               asp-controller="Users" asp-action="Index">
                            <i class="fas fa-users"></i> Library Users
                        </a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                            <i class="fas fa-shield-alt"></i> Privacy
                        </a>
                    </li> *@
                </ul>
            </div>

            <div class="col-md-9 col-lg-10 main-content">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6>Library Management System</h6>
                    <p class="text-muted">
                        <i class="fas fa-book"></i> Manage your library efficiently and effectively
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-muted">
                        &copy; @DateTime.Now.Year - Library Management System
                    </p>
                    <p class="text-muted">
                        <i class="fas fa-envelope"></i> support@library.com |
                        <i class="fas fa-phone"></i> (123) 456-7890
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery (for validation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
